<%- include('header') %>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">8x-pro</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/page1">page -1</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/lg">logout</a>
            </li>
        </ul>
    </div>
</nav>

<div class="row">
    <div class="col col-lg-9 col-md-6">
        <h3>Global Chat</h3>
        <% var i=0; elements.forEach(function(element){ %>
        <div class="item">
            <p style="width: 30% ;font-size: .8em;"><%= element.email %></p>
            <p style="width: 30% ;font-size: .8em;"><%= element.task %></p>
        </div>
        <%  }) %>
    </div>
    <div class="col col-lg-3 col-mg-6">
        <div class="r-div" style="background-color: aqua; padding: 20px;">
            <form action="/page1" method="POST">
                <div class="form-group">
                    <p>send chat from here</p>
                    <input type="" class="form-control form-control-sm" name="chat" placeholder="send chat here">
                </div>
                <button class="button" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

